{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "dynamicImport": true,
      "decorators": false
    },
    "transform": {
      "react": {
        "runtime": "automatic", // 使用React 17+自动导入
        "importSource": "react"
      }
    },
    "target": "es2022",
    "loose": false,
    "externalHelpers": false
  },
  "minify": false,
  "module": {
    "type": "es6",
    "noInterop": false
  }
}
